{
  "compilerOptions": {
      "sourceMap": true,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "lib": ["es2015", "es2017", "dom"],
      "typeRoots": [
          "node_modules/@types"
      ],
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true
  },
  "include": [
      "src/**/*",
      "tests/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}